<div id="wrapper">
    <div class="container">
        <div class="row mt-4">
            <div class="col-md-3 mt-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h5>Edit Profile</h5>
                    </div>
                    <div class="card-body">
                        <%= link_to 'View My Profile', "#", class: "btn btn-primary btn-block text-white" %>
                    </div>
                </div>
            </div>
            <div class="col-md-9 mt-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h5>Your Profile</h5>
                    </div>
                    <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="field form-group">
                                <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Fullname" %>
                            </div>

                            <div class="field form-group">
                                <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control", placeholder: "Phone Number" %>
                            </div>

                            <div class="field form-group">
                                <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control", placeholder: "Description", rows: "5" %>
                            </div>

                            <div class="field form-group">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                            </div>

                            <div class="field form-group">
                                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password(leave blank if you don't want to change it)" %>
                            </div>

                            <div class="actions text-center">
                                <%= f.submit "Save", class: "btn btn-primary login" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
