<body class="bg-form">
    <div id="wrapper">
        <div class="container form-class">
            <div class="col-lg-4 bg-form-container pt-1 pb-3">
                <h2 class="text-center mt-4 mb-4">Sign up</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-group">
                        <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control",placeholder: "Fullname" %>
                    </div>

                    <div class="form-group">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email" %>
                    </div>

                    <div class="form-group">
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder: "Password"  %>
                    </div>
                    <%= f.submit "Sign in", class: "btn btn-primary active  btn-block mt-4" %>
                <% end %>
            </div>
        </div>
    </div>
</div>


