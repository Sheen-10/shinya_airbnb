<body class="bg-form">
    <div id="wrapper">
        <div class="container form-class">
            <div class="col-lg-4 bg-form-container pt-1 pb-4">
                <h2 class="text-center mt-4 mb-5">Forgot your password?</h2>

                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-group">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email" %>
                    </div>

                    <%= f.submit "Send me reset password instructions", class: "btn btn-primary active btn-block mt-4" %>
                <% end %>
            </div>
        </div>
    </div>
</body>

