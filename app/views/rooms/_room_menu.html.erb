<div class="room-menu">
    <ul>
        <li>
            <%= link_to 'Listing', listing_room_path %>
            <span class="float-right"><i class="fa fa-check"></i></span>
        </li>
        <li class="mt-2">
            <%= link_to 'Pricing', pricing_room_path %>
            <% if !@room.price.blank? %>
                <span class="float-right"><i class="fa fa-check"></i></span>
            <% end %>
        </li>
        <li class="mt-2">
            <%= link_to 'Description', description_room_path %>
            <% if !@room.listing_name.blank? %>
                <span class="float-right"><i class="fa fa-check"></i></span>
            <% end %>
        </li>
        <li class="mt-2">
            <%= link_to 'Photos', photo_upload_room_path %>
            <% if !@room.photos.blank? %>
                <span class="float-right"><i class="fa fa-check"></i></span>
            <% end %>
        </li>
        <li class="mt-2">
            <%= link_to 'Amenities', amenities_room_path %>
            <span class="float-right"><i class="fa fa-check"></i></span>
        </li>
        <li class="border-bottom border-secondary mt-2  pb-2">
            <%= link_to 'Location', location_room_path %>
            <% if !@room.address.blank? %>
            <span class="float-right"><i class="fa fa-check"></i></span>
            <% end %>
        </li>
    </ul>
</div>

<% is_ready = ! @room.price.blank? && !@room.listing_name.blank? && !@room.photos.blank? && !@room.address.blank? %>

<%# <%= link_to 'Publish', root_path, class: "btn btn-outline-danger btn-block" %>

<%= form_for @room do |f|%>
    <%= f.hidden_field :active, value:true %>
    <%= f.submit "Publish", class: "btn btn-outline-danger btn-block", disabled: !is_ready %>
<% end %>